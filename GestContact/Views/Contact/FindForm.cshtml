@model GestContact.Models.FindFormModel  
@{
    ViewBag.Title = "Qui chercher ?";
}

<h2>Qui chercher ?</h2>

@using (Html.BeginForm("Find", "Contact", FormMethod.Post))
{
    <div class="form-group">
        <label>Nom à rechercher : </label>
        @Html.EditorFor(model => model.AChercher, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Rechercher" class="btn btn-default" />
        </div>
    </div>
}

